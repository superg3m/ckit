{
    "c_build_version" : "0.8",

    "project_name" : "ckit",

    "debug_with_visual_studio" : false,
    "should_rebuild_project_dependencies" : true,

    "compiler_type" : "cl",

    "std_version" : "c11",
    "project_dependencies" : ["ckg"],

    "./build_cl" : {
        "output_name" : "ckit.lib",
        "compile_time_defines" : "",
        "include_paths" : "",
        "source_paths" : [
            "../core/Assert/*.c", 
            "../core/Collection/Vector/*.c", 
            "../core/String/*.c", 
            "../core/Memory/*.c", 
            "../core/Platform/*.c", 
            "../core/Math/*.c", 
            "../core/FileIO/*.c",
            "../core/Logger/*.c",

            "../modules/parser/asset/bmp/*.c"
        ],

        "additional_libs" : ["../ckg/build_cl/ckg.lib"]
    },

    "./example/cl" : {
        "output_name" : "test_ckit.exe",
        "compile_time_defines" : "",
        "include_paths" : "",
        "source_paths" : [
            "../*.c"
        ],

        "additional_libs" : ["../../build_cl/ckit.lib"]
    },

    "execute" : "test_ckit.exe"
}