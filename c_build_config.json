{
    "c_build_version": "0.9",
    "project_name": "CKIT",
    "github_root": "https://github.com/superg3m",
    "compiler_type": "cl",
    "std_version": "c11",
    "compiler_warning_level": "",

    "compiler_disable_warnings": false,
    "debug_with_visual_studio": false,
    "should_rebuild_project_dependencies": true,
    "compiler_treat_warnings_as_errors": true,

    "project_dependencies": ["ckg"],
    "disable_specific_warnings": ["4668", "4820"],
    "inject_as_argument": [""],

    "./ckit_build_$compiler_type": {
        "output_name": "ckit.lib",
        "compile_time_defines": [""],
        "include_paths": [""],
        "source_files": [
            "../ckg/ckg.c",
            "../ckit.c"
        ],

        "additional_libs": ["Shlwapi.lib"]
    },

    "./Tests/ckit_build_$compiler_type" : {
        "output_name" : "test_ckit.exe",
        "compile_time_defines" : [""],
        "include_paths" : [""],
        "source_files" : ["../ckit/*.c"],

        "additional_libs" : [
            "../../ckit_build_$compiler_type/ckit.lib"
        ]
    },

    "execute": ["test_ckit.exe"]
}
